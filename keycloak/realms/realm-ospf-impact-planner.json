{
  "id": "ospf-impact-planner",
  "realm": "ospf-impact-planner",
  "displayName": "OSPF Impact Planner",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>OSPF Impact Planner</span></div>",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 5,
  "passwordPolicy": "length(12) and upperCase(1) and lowerCase(1) and digits(1) and specialChars(1) and notUsername and passwordHistory(5)",
  "defaultSignatureAlgorithm": "RS256",
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "offlineSessionMaxLifespanEnabled": false,
  "clientSessionIdleTimeout": 0,
  "clientSessionMaxLifespan": 0,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "oauth2DeviceCodeLifespan": 600,
  "oauth2DevicePollingInterval": 5,
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator role with full access",
        "composite": false
      },
      {
        "name": "user",
        "description": "Standard user with limited access",
        "composite": false
      },
      {
        "name": "viewer",
        "description": "Read-only access to topology data",
        "composite": false
      }
    ],
    "client": {
      "impact-planner-api": [
        {
          "name": "topology:read",
          "description": "Read topology data"
        },
        {
          "name": "topology:write",
          "description": "Create and modify topology"
        },
        {
          "name": "topology:delete",
          "description": "Delete topology data"
        },
        {
          "name": "settings:manage",
          "description": "Manage application settings"
        },
        {
          "name": "users:manage",
          "description": "Manage users (admin only)"
        }
      ]
    }
  },
  "groups": [
    {
      "name": "Administrators",
      "path": "/Administrators",
      "realmRoles": ["admin"]
    },
    {
      "name": "Users",
      "path": "/Users",
      "realmRoles": ["user"]
    },
    {
      "name": "Viewers",
      "path": "/Viewers",
      "realmRoles": ["viewer"]
    }
  ],
  "defaultDefaultClientScopes": [
    "role_list",
    "profile",
    "email",
    "roles",
    "web-origins",
    "acr"
  ],
  "defaultOptionalClientScopes": [
    "offline_access",
    "address",
    "phone",
    "microprofile-jwt"
  ],
  "clients": [
    {
      "clientId": "impact-planner-frontend",
      "name": "OSPF Impact Planner Frontend",
      "description": "React frontend application",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "authorizationServicesEnabled": false,
      "fullScopeAllowed": true,
      "rootUrl": "http://localhost:9090",
      "baseUrl": "/",
      "redirectUris": [
        "http://localhost:9090/*",
        "http://127.0.0.1:9090/*"
      ],
      "webOrigins": [
        "http://localhost:9090",
        "http://127.0.0.1:9090"
      ],
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "http://localhost:9090/*"
      },
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "offline_access"
      ]
    },
    {
      "clientId": "impact-planner-api",
      "name": "OSPF Impact Planner API",
      "description": "Backend API server",
      "enabled": true,
      "publicClient": false,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "fullScopeAllowed": true,
      "rootUrl": "http://localhost:9091",
      "redirectUris": [
        "http://localhost:9091/*"
      ],
      "webOrigins": [
        "http://localhost:9091"
      ],
      "protocol": "openid-connect",
      "secret": "${APP1_CLIENT_SECRET}",
      "attributes": {
        "access.token.lifespan": "300"
      },
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "vault-oidc",
      "name": "Vault OIDC Integration",
      "description": "OIDC client for HashiCorp Vault authentication",
      "enabled": true,
      "publicClient": false,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "rootUrl": "http://localhost:8200",
      "redirectUris": [
        "http://localhost:8200/ui/vault/auth/oidc/oidc/callback",
        "http://localhost:8250/oidc/callback"
      ],
      "webOrigins": [
        "http://localhost:8200"
      ],
      "protocol": "openid-connect",
      "secret": "${VAULT_OIDC_SECRET}",
      "attributes": {
        "access.token.lifespan": "300"
      }
    }
  ],
  "users": [
    {
      "username": "impact-admin",
      "enabled": true,
      "emailVerified": true,
      "email": "impact-admin@ospf.local",
      "firstName": "Impact",
      "lastName": "Admin",
      "credentials": [
        {
          "type": "password",
          "value": "ChangeMe!Admin2025",
          "temporary": true
        }
      ],
      "realmRoles": ["admin"],
      "groups": ["/Administrators"]
    },
    {
      "username": "impact-user",
      "enabled": true,
      "emailVerified": true,
      "email": "impact-user@ospf.local",
      "firstName": "Impact",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "ChangeMe!User2025",
          "temporary": true
        }
      ],
      "realmRoles": ["user"],
      "groups": ["/Users"]
    }
  ],
  "browserSecurityHeaders": {
    "contentSecurityPolicyReportOnly": "",
    "xContentTypeOptions": "nosniff",
    "xRobotsTag": "none",
    "xFrameOptions": "SAMEORIGIN",
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'self'; object-src 'none';",
    "xXSSProtection": "1; mode=block",
    "strictTransportSecurity": "max-age=31536000; includeSubDomains"
  },
  "smtpServer": {},
  "eventsEnabled": true,
  "eventsListeners": ["jboss-logging"],
  "enabledEventTypes": [
    "LOGIN",
    "LOGIN_ERROR",
    "LOGOUT",
    "LOGOUT_ERROR",
    "CODE_TO_TOKEN",
    "CODE_TO_TOKEN_ERROR",
    "REGISTER",
    "REGISTER_ERROR",
    "UPDATE_PASSWORD",
    "UPDATE_PASSWORD_ERROR"
  ],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true
}
