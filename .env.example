# ============================================================================
# OSPF Auth-Vault Infrastructure Configuration
# Copy this file to .env and update values for your environment
# ============================================================================

# =============================================================================
# KEYCLOAK CONFIGURATION
# =============================================================================

# Admin credentials - CHANGE THESE IN PRODUCTION!
KC_ADMIN_USER=admin
KC_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Database password
KC_DB_PASSWORD=CHANGE_ME_DB_PASSWORD_HERE

# Server hostname and port
KC_HOSTNAME=localhost
KC_PORT=8080

# =============================================================================
# VAULT CONFIGURATION
# =============================================================================

# Development root token - CHANGE IN PRODUCTION!
# In production, use proper unsealing with Shamir keys
VAULT_DEV_TOKEN=CHANGE_ME_VAULT_TOKEN_HERE
VAULT_PORT=8200

# =============================================================================
# APPLICATION REALM SECRETS (Auto-generated on first run)
# These will be populated by the init scripts
# =============================================================================

# OSPF-IMPACT-Planner (App 1)
APP1_CLIENT_SECRET=
APP1_REALM=ospf-impact-planner

# OSPF-LL-JSON-PART1 (App 2)
APP2_CLIENT_SECRET=
APP2_REALM=ospf-ll-json-part1

# OSPF-NN-JSON (App 3)
APP3_CLIENT_SECRET=
APP3_REALM=ospf-nn-json

# OSPF-TEMPO-X (App 4)
APP4_CLIENT_SECRET=
APP4_REALM=ospf-tempo-x

# OSPF-LL-DEVICE_MANAGER (App 5)
APP5_CLIENT_SECRET=
APP5_REALM=ospf-device-manager

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:9090,http://localhost:9040,http://localhost:9080,http://localhost:9100,http://localhost:9050

# IP whitelist (comma-separated, or 127.0.0.1 for localhost only)
ALLOWED_IPS=127.0.0.1

# =============================================================================
# TLS/SSL CONFIGURATION (Production)
# =============================================================================

# Enable TLS
TLS_ENABLED=false

# Certificate paths (when TLS_ENABLED=true)
TLS_CERT_PATH=/etc/ssl/certs/auth-vault.crt
TLS_KEY_PATH=/etc/ssl/private/auth-vault.key
